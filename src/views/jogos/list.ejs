<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de jogos</title>
    <style>
        table, tr, td, th{
            border: 1px solid black;
        }
        tr, td, th{
            padding: 15px;
            text-align: center;
        }
        ul{
            margin-bottom: 18px;
        }
        input{
            margin-bottom: 18px;
            padding: 18px;
        }
        image{
            max-height: 120px;
            max-width: 120px;
        }
        .icon{
            max-width: 55px;
            max-height: 55px;
        }
    </style>
</head>
<body>
    <ul>
        <li>
            <a href="/admin/usuario">Listar</a>
        </li>
        <li>
            <a href="/admin/usuario/add">Adicionar</a>
        </li>
    </ul>
    <form method="post">
        <input type="text" name="pesquisar" >
        <input type="submit" value="Pesquisar">
    </form>
    <table>
        <tr>
            <th>Id</th>
            <th>nome</th>
            <th>desenvolvedora</th>
            <th>numeroserial</th>
            <th>foto</th>
            <th>edita</th>
            <th>deleta</th>
        </tr>
        <% jogos.forEach(function(jogos){%>
        <tr>
            <td> <%=jogos.id%> </td>
            <td> <%=jogos.nome%> </td>
            <td> <%=jogos.desenvolvedora%> </td>
            <td> <%=jogos.numeroserial%> </td>
            <td>
                <img src="/upload/<%=jogos.foto%>" width="80px" > 
            </td>
            <td> 
                <a href="/admin/usuario/edt/<%=jogos.id%>">
                    <img src="/edit.jpg" class="icon">    
            </td>
            <td>
                <a href="/admin/usuario/del/<%=jogos.id%>">
                    <img src="/Lixeira.png" class="icon">
                </a> 
            </td>
        </tr>
        <% }) %>
    </table>
</body>
</html>